<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">News Scraper!</h1>
      <p class="lead">This app lets your query articles from NYC!</p>
    </div>
  </div>
  <div>
    <table class="table table-striped table-bordered">
      <thead class="thead-light">
        <tr>
          <th>Articles</th>
        </tr>
      </thead>
      <tbody>
        {{#each articles}}
        <tr>
          <td>
            <span>
              <h2>{{this.title}}</h2>
            </span>
            <span>
              <a href="{{this.link}}">
                <img src="{{this.imageLink}}"></img>
              </a>
            </span>
            <div>
              <ul>{{{this.summary}}}</ul>
            </div>
            {{!-- {{this.notes}} --}}

            <ul class="list-group">
              <li class="list-group-item active">Notes</li>
              {{#each this.notes}}
              <li class="list-group-item">
                <h4>{{this.title}}</h4>
                <span>{{this.body}}</span>
              </li>
              {{/each}}
            </ul>

            <div class="form-group">
              <label for="note_title">Note Title</label>
              <input type="text" class="form-control" id="title_{{id}}" aria-describedby="note_title"
                placeholder="Enter note">
            </div>
            <div class="form-group">
              <label for="note_body">Note Body</label>
              <input type="text" class="form-control" id="body_{{id}}" aria-describedby="note_body"
                placeholder="Enter note">
            </div>
            <button data-id="{{id}}" data-newsleep="{{sleep}}">
              Add Note
            </button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>